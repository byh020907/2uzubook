CREATE TABLE `account` (
  `student_id` int(11) NOT NULL,
  `id` varchar(100) NOT NULL,
  `password` varchar(100) NOT NULL,
  intro varchar(200) NULL,
  `name` varchar(100) NOT NULL,
  `gender` varchar(7) NOT NULL,
  `major` varchar(20) NOT NULL,
  `email` varchar(50) NOT NULL,
  UNIQUE KEY `id` (`id`),
  UNIQUE KEY `email` (`email`),
  PRIMARY KEY (`student_id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;

CREATE TABLE `resume` (
  student_id int not null,
  resumeName varchar(100) not null,
  resumeContent text not null,
  resumeDate Date null,
  resume_category int not null,
  keyword_category int not null,
  PRIMARY KEY (`student_id`),
  CONSTRAINT `fk_resume_account` FOREIGN KEY (`student_id`) REFERENCES `account` (`student_id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;

CREATE TABLE `keyword_category` (
  keyword_num INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
  keyword_name varchar(100) not null,
  PRIMARY KEY (`keyword_num`),
  CONSTRAINT `fk_keyword_category` FOREIGN KEY (`keyword_num`) REFERENCES `resume` (`keyword_category`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;

CREATE TABLE `resume_category` (
  resume_num INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
  resume_name varchar(100) not null
  PRIMARY KEY (`resume_num`),
  CONSTRAINT `fk_resume_category` FOREIGN KEY (`resume_num`) REFERENCES `resume` (`resume_category`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;

CREATE TABLE `serialkey` (
  serialkey_num INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
  serialKey varchar(500) not null,
  keyword_category int null,
  UNIQUE KEY `serialkey` (`serialkey`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;

